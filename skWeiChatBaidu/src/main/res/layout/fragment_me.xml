<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/info_rl"
                android:layout_width="match_parent"
                android:layout_height="158dp"
                android:background="@color/white">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="115dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginTop="46dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/header_more"
                        style="@style/IMTbleLine_ArrowImg.Me"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp20"
                        android:background="@drawable/me_chevron_right" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="20dp"
                        android:layout_toLeftOf="@+id/header_more"
                        android:padding="4dp"
                        android:src="@drawable/ic_qr_code"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/rel_img"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_marginTop="28dp"
                        android:layout_toRightOf="@+id/rel_img"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:id="@+id/nick_name_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:paddingRight="10dp"
                                android:singleLine="true"
                                android:textColor="@color/color_33"
                                android:textSize="20sp"
                                tools:text="@string/example_name" />

                            <ImageView
                                android:id="@+id/vip_mark"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:visibility="gone"
                                android:layout_gravity="center"
                                android:src="@mipmap/bhl" />

                            <ImageView
                                android:id="@+id/uid_tv"
                                android:visibility="gone"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/l3_1"
                                />


                        </LinearLayout>


                        <TextView
                            android:id="@+id/phone_number_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:textColor="@color/color_33"
                            android:textSize="14sp"
                            tools:text="@string/x69" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rel_img"
                        android:layout_width="99dp"
                        android:layout_height="99dp">

                        <com.ydd.zhichat.view.HeadMeView
                            android:id="@+id/avatar_img"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_centerInParent="true"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerCrop"
                            android:src="@drawable/avatar_normal"
                            android:visibility="visible"
                            app:riv_border_color="@color/white"
                            app:riv_border_width="2dp"
                            app:riv_corner_radius="@dimen/dp5"
                            app:riv_oval="false" />
                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>

            <!--            </RelativeLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/IMTbleLine"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/llFriend"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@mipmap/my_friend" />

                        <TextView
                            android:id="@+id/tvFriend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:text="236" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@color/gray"
                            android:text=""
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llGroup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@mipmap/my_group" />

                        <TextView
                            android:id="@+id/tvGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:text="26" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="9dp"
                android:background="@color/normal_bg"
                android:divider="@drawable/me_divider"
                android:orientation="vertical"
                android:showDividers="middle">

                <RelativeLayout
                    android:id="@+id/my_monry"
                    style="@style/IMTbleLine_UP"
                    android:background="@color/white"
                    android:visibility="visible">

                    <com.ydd.zhichat.view.LightImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_pocket" />

                    <TextView
                        style="@style/IMTbleLine_TextName"
                        android:layout_centerVertical="true"
                        android:text="@string/my_purse" />

                    <ImageView
                        style="@style/IMTbleLine_ArrowImg.Me"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/me_chevron_right"
                        android:contentDescription="@string/app_name" />





                    <com.ydd.zhichat.view.LightImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_pocket" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/my_space_rl"
                    style="@style/IMTbleLine_UP"
                    android:background="@color/white"
                    android:visibility="visible">

                    <ImageView
                        style="@style/IMTbleLine_ArrowImg.Me"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/me_chevron_right"
                        android:contentDescription="@string/app_name" />

                    <com.ydd.zhichat.view.LightImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/my_icon_noalbum" />

                    <TextView
                        android:id="@+id/MySky"
                        style="@style/IMTbleLine_TextName"
                        android:layout_centerVertical="true"
                        android:text="@string/x70" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/my_collection_rl"
                    style="@style/IMTbleLine_UP"
                    android:background="@color/white"
                    android:visibility="visible">

                    <com.ydd.zhichat.view.LightImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/my_icon_collection" />

                    <TextView
                        android:id="@+id/my_collection_tv"
                        style="@style/IMTbleLine_TextName"
                        android:layout_centerVertical="true"
                        android:text="我的笔记" />

                    <ImageView
                        style="@style/IMTbleLine_ArrowImg.Me"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/me_chevron_right"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/correlation_rl"
                    style="@style/IMTbleLine"
                    android:background="@color/white">

                    <com.ydd.zhichat.view.LightImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/yuwoxiangguan" />

                    <TextView
                        android:id="@+id/correlation_tv"
                        style="@style/IMTbleLine_TextName"
                        android:layout_centerVertical="true"
                        android:text="@string/x71" />

                    <ImageView
                        style="@style/IMTbleLine_ArrowImg.Me"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/me_chevron_right"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/share_rl"
                    style="@style/IMTbleLine"
                    android:background="@color/white"
                    android:visibility="gone"
                    >

                    <com.ydd.zhichat.view.LightImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/tuiguang" />

                    <TextView
                        android:id="@+id/share_tv"
                        style="@style/IMTbleLine_TextName"
                        android:layout_centerVertical="true"
                        android:text="@string/x72" />

                    <ImageView
                        style="@style/IMTbleLine_ArrowImg.Me"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/me_chevron_right"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/customer_rl"
                    style="@style/IMTbleLine"
                    android:background="@color/white"
                    >

                    <com.ydd.zhichat.view.LightImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/kefu" />

                    <TextView
                        android:id="@+id/customer_tv"
                        style="@style/IMTbleLine_TextName"
                        android:layout_centerVertical="true"
                        android:text="@string/x73" />

                    <ImageView
                        style="@style/IMTbleLine_ArrowImg.Me"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/me_chevron_right"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/vip_rl"
                    style="@style/IMTbleLine"
                    android:background="@color/white"
                    >

                    <com.ydd.zhichat.view.LightImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/kaitonghuiyuan" />

                    <TextView
                        android:id="@+id/vip_tv"
                        style="@style/IMTbleLine_TextName"
                        android:layout_centerVertical="true"
                        android:text="会员中心" />

                    <ImageView
                        style="@style/IMTbleLine_ArrowImg.Me"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/me_chevron_right"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/shop_rl"
                    style="@style/IMTbleLine"
                    android:background="@color/white"
                    >

                    <com.ydd.zhichat.view.LightImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/kaitonghuiyuan" />

                    <TextView
                        android:id="@+id/shop_tv"
                        style="@style/IMTbleLine_TextName"
                        android:layout_centerVertical="true"
                        android:text="靓号商城" />

                    <ImageView
                        style="@style/IMTbleLine_ArrowImg.Me"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/me_chevron_right"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/local_course_rl"
                    style="@style/IMTbleLine"
                    android:background="@color/white"
                    android:visibility="gone">

                    <com.ydd.zhichat.view.LightImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/my_icon_web_client" />

                    <TextView
                        android:id="@+id/my_course_tv"
                        style="@style/IMTbleLine_TextName"
                        android:layout_centerVertical="true"
                        android:text="@string/my_course" />

                    <ImageView
                        style="@style/IMTbleLine_ArrowImg.Me"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/me_chevron_right"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/meeting_rl"
                        style="@style/IMTbleLine_UP"
                        android:background="@color/white"
                        android:visibility="visible">

                        <com.ydd.zhichat.view.LightImageView
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/my_meeting" />

                        <TextView
                            style="@style/IMTbleLine_TextName"
                            android:layout_centerVertical="true"
                            android:text="@string/chat_video_conference" />

                        <ImageView
                            style="@style/IMTbleLine_ArrowImg.Me"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/me_chevron_right"
                            android:contentDescription="@string/app_name" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/live_rl"
                        style="@style/IMTbleLine_UP"
                        android:background="@color/white"
                        android:visibility="visible">

                        <com.ydd.zhichat.view.LightImageView
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/my_live" />

                        <TextView
                            style="@style/IMTbleLine_TextName"
                            android:layout_centerVertical="true"
                            android:text="@string/live_demo" />

                        <ImageView
                            style="@style/IMTbleLine_ArrowImg.Me"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/me_chevron_right"
                            android:contentDescription="@string/app_name" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/douyin_rl"
                        style="@style/IMTbleLine"
                        android:background="@color/white"
                        android:visibility="gone">

                        <com.ydd.zhichat.view.LightImageView
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/my_douyin"
                            app:srcLight="@drawable/my_douyin_light" />

                        <TextView
                            style="@style/IMTbleLine_TextName"
                            android:layout_centerVertical="true"
                            android:text="@string/douyin" />

                        <ImageView
                            style="@style/IMTbleLine_ArrowImg.Me"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/me_chevron_right"
                            android:contentDescription="@string/app_name" />
                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/setting_rl"
                    style="@style/IMTbleLine"
                    android:layout_marginTop="10dp"
                    android:background="@color/white">

                    <com.ydd.zhichat.view.LightImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/my_icon_setting" />

                    <TextView
                        android:id="@+id/SettingTv"
                        style="@style/IMTbleLine_TextName"
                        android:layout_centerVertical="true"
                        android:text="@string/settings" />

                    <ImageView
                        style="@style/IMTbleLine_ArrowImg.Me"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/me_chevron_right"
                        android:contentDescription="@string/app_name" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
