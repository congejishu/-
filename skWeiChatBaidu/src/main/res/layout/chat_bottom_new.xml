<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/b_shots_ll"
        android:layout_width="70dp"
        android:layout_height="130dp"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/screen_shots_bg"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip_quick_send"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/b_shots_iv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:riv_corner_radius="9dp"
            app:riv_mutate_background="true" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/chat_bottom_line" />

    <RelativeLayout
        android:id="@+id/rl_chat_meun"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/rounded_layout_bg"
    android:padding="8dp">

        <RelativeLayout
            android:id="@+id/rl_chat_meun_in"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/frame_right"
            android:background="#fff"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fl_public_menu"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="5dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_chat_menu" />

                <View
                    android:layout_width="0.8dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="@color/chat_bottom_line" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/right_layout"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/fl_public_menu"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/voice_img_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/im_voice"
                    android:contentDescription="@string/app_name"
                    android:padding="3dp" />

                <ImageButton
                    android:id="@+id/btnCancelReplay"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/im_circle_cancel"
                    android:contentDescription="@string/app_name"
                    android:padding="3dp"
                    android:visibility="gone" />

            </FrameLayout>

            <!-- 聊天内容 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/left_layout"
                android:layout_toRightOf="@+id/right_layout"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <EditText
                    android:id="@+id/chat_edit"
                    android:layout_width="428dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/screen_shots_bg"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"

                    android:hint="请输入聊天内容！"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:padding="8dp"
                    android:textSize="@dimen/one_level_title" />

                <Button
                    android:id="@+id/record_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rounded_button_bg"
                android:gravity="center"
                android:padding="6dp"
                android:text="@string/motalk_voice_chat_tip_1"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15_text_size"
                android:visibility="gone" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/left_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/emotion6_btn"
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/im_btn_emotion_bg"
                    android:contentDescription="@string/app_name" />

            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/frame_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageButton
                android:id="@+id/more_bt6n"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/im_btn_more_bg"
                android:contentDescription="@string/app_name"
                android:visibility="gone" />

            <Button
                android:id="@+id/send_btn"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/a_bg_for_send_msg"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/send"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14_text_size"
                android:visibility="gone" />

        </FrameLayout>
    </RelativeLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:background="#80F4F5F9"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/tools_tape"
            android:layout_width="@dimen/dp25"
            android:layout_height="@dimen/dp25"
            android:layout_weight="1"
            android:background="@null"
            android:src="@mipmap/chat_but07" />

        <ImageButton
            android:id="@+id/more_image_btn"
            android:layout_width="@dimen/dp25"
            android:layout_height="@dimen/dp25"
            android:layout_weight="1"
            app:btnBadgeText="8"
            app:btnBadgeVisible="true"
            android:background="@null"
            android:src="@mipmap/chat_but05" />

        <ImageButton
            android:id="@+id/tools_camera"
            android:layout_width="@dimen/dp25"
            android:layout_height="@dimen/dp25"
            android:layout_weight="1"
            android:background="@null"
            android:src="@mipmap/chat_but06" />

        <ImageButton
            android:id="@+id/tools_packeyt"
            android:layout_width="@dimen/dp25"
            android:layout_height="@dimen/dp25"
            android:layout_weight="1"
            android:background="@null"
            android:src="@mipmap/chat_but02" />

        <ImageButton
            android:id="@+id/emotion_btn"
            android:layout_width="@dimen/dp25"
            android:layout_height="@dimen/dp25"
            android:layout_weight="1"
            android:background="@null"
            android:src="@mipmap/chat_but01" />

        <ImageButton
            android:id="@+id/more_btn"
            android:layout_width="@dimen/dp25"
            android:layout_height="@dimen/dp25"
            android:layout_weight="1"
            android:background="@null"
            android:src="@mipmap/chat_but03" />

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />
    <!-- 公众号菜单-->
    <ViewStub
        android:id="@+id/ll_show_public_meun_stub"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:inflatedId="@+id/ll_show_public_meun"
        android:layout="@layout/chat_bottom_public" />

    <!-- 多选菜单-->
    <ViewStub
        android:id="@+id/more_select_ll_stub"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inflatedId="@+id/more_select_ll"
        android:layout="@layout/chat_bottom_select" />

    <FrameLayout
        android:id="@+id/vBottomPanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ViewStub
            android:id="@+id/chat_face_view_stub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inflatedId="@+id/chat_face_view"
            android:layout="@layout/chat_bottom_face" />

        <ViewStub
            android:id="@+id/chat_tools_view_stub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inflatedId="@+id/chat_tools_view"
            android:layout="@layout/chat_bottom_tools" />

        <ViewStub
            android:id="@+id/chat_tools_view_viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inflatedId="@+id/chat_tools_view_new"
            android:layout="@layout/chat_image_tools"
            tools:ignore="MissingConstraints"/>

        <ViewStub
            android:id="@+id/chat_tools_view_tape_viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inflatedId="@+id/chat_tools_view_new"
            android:layout="@layout/chat_tape_tools"
            tools:ignore="MissingConstraints"/>


    </FrameLayout>


</LinearLayout>