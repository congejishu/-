<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/list_selector_background_ripple"
              android:orientation="vertical">

    <TextView
        android:id="@+id/catagory_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/normal_bg"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textColor="@color/text_black"
        android:textSize="15sp"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:minHeight="56dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <FrameLayout
            android:id="@+id/fay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <com.ydd.zhichat.view.HeadView
                android:id="@+id/avatar_img"
                android:layout_width="46dp"
                android:layout_height="46dp"/>


            <com.ydd.zhichat.view.HeadView
                android:id="@+id/avatar_imgS"
                android:layout_width="46dp"
                android:visibility="gone"
                android:layout_height="46dp"/>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/info_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/fay"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nick_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:maxWidth="200dp"
                    android:singleLine="true"
                    android:text="胡八一"
                    android:textColor="@color/black"
                    android:textSize="@dimen/friend_sort_size" />

                <ImageView
                    android:id="@+id/vip_mark"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/bhl" />

                <ImageView
                    android:id="@+id/uuid_mark"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/l3_1" />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_uuid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="靓号ID:"
                    />
                <TextView
                    android:id="@+id/uuid_tv"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/color_red"
                    android:textSize="@dimen/group_content_size" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="@dimen/friend_item_line_margin_left"
            android:background="@color/Grey_300"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</LinearLayout>