<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/item_chat_text_ll"
        android:layout_width="100dp"
        android:layout_height="31dp"
        android:background="@mipmap/icon_vip_title_bg1"
        android:divider="@drawable/divider_long_click_window"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:showDividers="middle">

        <TextView
            android:id="@+id/item_chat_aita_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="\@"
            android:textColor="@color/white"
            android:textSize="@dimen/three_level_content" />

        <TextView
            android:id="@+id/item_chat_transfer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="转账"
            android:textColor="@color/white"
            android:textSize="@dimen/three_level_content" />

    </LinearLayout>

</LinearLayout>