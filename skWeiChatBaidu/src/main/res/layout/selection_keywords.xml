<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fillet_dialog_bg"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_18_text_size"
                android:textStyle="bold" />

            <EditText
                android:layout_margin="30dp"
                android:id="@+id/search_edit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_toLeftOf="@+id/tv_cancel"
                android:layout_weight="1"
                android:background="@drawable/et_search_bg"
                android:hint="请输入关键字"
                android:imeOptions="actionSearch"
                android:lines="1"
                android:paddingLeft="9dp"
                android:paddingRight="@dimen/dp40"
                android:singleLine="true"
                android:textSize="@dimen/message_search_size"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/Grey_200" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_select_frame_left_selector_background_ripple"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_18_text_size"
                android:textStyle="bold" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/Grey_200" />

            <TextView
                android:id="@+id/confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_select_frame_right_selector_background_ripple"
                android:gravity="center"
                android:text="@string/sure"
                android:textColor="@color/button_text"
                android:textSize="@dimen/sp_18_text_size"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>